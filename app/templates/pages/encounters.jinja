{% extends 'pages/base.jinja' %}


{% block title %}

    Encounters

{% endblock %}


{% block content %}

    <h2 class="heading">Encounters:</h2>

    <article id="allEncounters">

        {% if not encounters %}
            <h2 class="heading">No Encounters</h2>
        {% endif %}
        
        {% for encounter in encounters %}
            {% if encounter.pinned == 1 %}
                <article class="encounter" onclick="location.href='/encounter/{{encounter.id}}'">
                    <div>
                        <a href="/encounter/{{encounter.id}}/unpin"><img src="/static/images/filledStar.svg"></a>
                    </div>

                    <div>
                        <h4>{{encounter.name}}</h4>
                        {{encounter.description}}
                    </div>

                    <div>
                        <a onclick="return confirm('Are you sure you wish to delete {{encounter.name}}?')" href="/encounter/{{encounter.id}}/delete" ><img class="delete" src="/static/images/bin.svg"></a>
                    </div>
                </article>
            {% endif %}
        {% endfor %}

        <hr/>

        {% for encounter in encounters %}
            {% if encounter.pinned == 0 %}
                <article class="encounter" onclick="location.href='/encounter/{{encounter.id}}'">
                    <div>
                        <a href="/encounter/{{encounter.id}}/pin"><img src="/static/images/emptyStar.svg"></a>
                    </div>

                    <div>
                        <h4>{{encounter.name}}</h4>
                        {{encounter.description}}
                    </div>

                    <div>
                        <a onclick="return confirm('Are you sure you wish to delete {{encounter.name}}?')" href="/encounter/{{encounter.id}}/delete"><img class="delete" src="/static/images/bin.svg"></a>
                    </div>
                </article>
            {% endif %}
        {% endfor %}

    </article>

    <a class="button" role="button" href="/encounter/new">Create an Encounter</a>

{% endblock %}


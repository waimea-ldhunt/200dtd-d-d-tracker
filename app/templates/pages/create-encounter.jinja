{% extends 'pages/base.jinja' %}


{% block title %}

    {# Page Name #}
    Create Encounter

{% endblock %}


{% block content %}

    <h2 class="heading">Create an Encounter:</h2>

    <article class="encounter_form">
        {# Form for inputting encounter details #}
        <form method="POST" action="/encounter/create">
            <input class="encounter_input" name="name" placeholder="Encounter Name">
            
            <input class="encounter_input" name="description" placeholder="Encounter Description">

            {# Form Submit #}
            <input class="submit" type="submit" value="Create">
        </form>

    </article>

{% endblock %}